<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.stage.*?>


<Stage fx:id="dialog" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.com.vialogika.logikpos.util.DiscountDialog">
   <scene>
      <Scene>
         <root>
            <AnchorPane prefHeight="200.0" prefWidth="300.0">
               <children>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label contentDisplay="RIGHT" text="Descuento ">
                           <font>
                              <Font size="34.0" />
                           </font>
                           <graphic>
                              <Label fx:id="signLabel">
                                 <font>
                                    <Font size="34.0" />
                                 </font>
                              </Label>
                           </graphic>
                        </Label>
                        <TextField fx:id="discountField">
                           <font>
                              <Font size="25.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="20.0" right="20.0" />
                           </VBox.margin>
                        </TextField>
                        <ToggleButton fx:id="toggleMode" mnemonicParsing="false">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </ToggleButton>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0">
                          <buttons>
                            <Button mnemonicParsing="false" text="Ok" />
                              <Button mnemonicParsing="false" text="Cancelar" />
                          </buttons>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </ButtonBar>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </root>
      </Scene>
   </scene>
</Stage>
